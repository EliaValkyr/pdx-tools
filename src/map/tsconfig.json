{
  "compilerOptions": {
    "target": "es2019",
    "outFile": "dist/index.js",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "amd",
    "moduleResolution": "node",
    "inlineSourceMap": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
